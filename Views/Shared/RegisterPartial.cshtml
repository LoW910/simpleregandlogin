@model SimpleLoginRegistration.Models.RegUser

<div class="container">
    <h1>Register</h1>
    <form asp-action="Register" asp-controller="User" method="post">
        <div class="form-group">
            <label asp-for="FirstName" class="form-control"></label>
            <input asp-for="FirstName" class="form-control">
            <span asp-validation-for="FirstName"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastName" class="form-control"></label>
            <input asp-for="LastName" class="form-control">
            <span asp-validation-for="LastName"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="form-control"></label>
            <input asp-for="Email" class="form-control">
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="form-control"></label>
            <input asp-for="Password" class="form-control">
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="form-control"></label>
            <input asp-for="Password" class="form-control">
            <span asp-validation-for="Password"></span>
        </div>
        <button type="submit" class="btn-primary">Register</button>
    </form>
</div>